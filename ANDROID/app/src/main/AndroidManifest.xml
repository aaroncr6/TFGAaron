        <activity
            android:name=".AdminProductosActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AdminMainActivity"
            android:exported="false" />
        <activity
            android:name=".WorkerMainActivity"
            android:windowSoftInputMode="adjustPan"
